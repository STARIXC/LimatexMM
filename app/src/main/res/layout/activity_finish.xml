<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteDark"
    android:orientation="horizontal"
    tools:context="g3org3.limatexmm.finish">


    <TextView
        android:id="@+id/client_phone_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:gravity="bottom"
        android:padding="3dp"
        android:text="Numarul de telefon:"
        android:textSize="17sp"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarContainer"
        app:layout_constraintWidth_percent="0.25" />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/calc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="30dp"
        android:background="@color/colorWhite"
        android:padding="2dp"
        app:layout_constraintBottom_toTopOf="@id/finishOrder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintWidth_percent="0.3">

        <TextView
            android:id="@+id/calc_tot_label"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center|right"
            android:padding="7dp"
            android:text="0"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.45" />


        <TextView
            android:id="@+id/calc_mid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:padding="1dp"
            android:text="|"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/calc_tot_label"
            app:layout_constraintWidth_percent="0.05" />

        <TextView
            android:id="@+id/calc_tot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="25.1 LEI"
            android:textColor="@color/colorPrimary"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@id/calc_mid"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/calc_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ripple_button_white"
            android:text="1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/calc_tot"
            app:layout_constraintWidth_percent="0.33333" />

        <Button
            android:id="@+id/calc_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ripple_button_white_dark"
            android:text="2"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calc_tot"
            app:layout_constraintWidth_percent="0.33333" />

        <Button
            android:id="@+id/calc_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ripple_button_white"
            android:text="3"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/calc_tot"
            app:layout_constraintWidth_percent="0.33333" />

        <Button
            android:id="@+id/calc_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ripple_button_white"
            android:text="4"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/calc_1"
            app:layout_constraintWidth_percent="0.33333" />

        <Button
            android:id="@+id/calc_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ripple_button_white_dark"
            android:text="5"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calc_1"
            app:layout_constraintWidth_percent="0.33333" />

        <Button
            android:id="@+id/calc_9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ripple_button_white"
            android:text="9"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/calc_4"
            app:layout_constraintWidth_percent="0.33333" />

        <Button
            android:id="@+id/calc_7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ripple_button_white"
            android:text="7"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/calc_4"
            app:layout_constraintWidth_percent="0.33333" />

        <Button
            android:id="@+id/calc_8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ripple_button_white_dark"
            android:text="8"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calc_4"
            app:layout_constraintWidth_percent="0.33333" />

        <Button
            android:id="@+id/calc_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ripple_button_white"
            android:text="6"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/calc_1"
            app:layout_constraintWidth_percent="0.33333" />

        <Button
            android:id="@+id/calc_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ripple_button_white"
            android:text="0"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/calc_7"
            app:layout_constraintWidth_percent="0.33333" />

        <Button
            android:id="@+id/calc_dot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ripple_button_white_dark"
            android:text=","
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calc_7"
            app:layout_constraintWidth_percent="0.33333" />

        <Button
            android:id="@+id/calc_clear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ripple_button_white"
            android:text="Clear"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/calc_7"
            app:layout_constraintWidth_percent="0.33333" />


    </android.support.constraint.ConstraintLayout>


    <AutoCompleteTextView
        android:id="@+id/client_phone"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:background="@color/colorWhite"
        android:ems="10"
        android:gravity="left|center"
        android:hint="(apasa aici)"
        android:inputType="phone"
        android:maxLength="10"
        android:padding="3dp"
        android:textAllCaps="true"
        android:textColorHint="#70000000"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="@id/client_phone_label"
        app:layout_constraintTop_toBottomOf="@id/client_phone_label"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:id="@+id/client_name_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:gravity="bottom"
        android:padding="3dp"
        android:text="Numele clientului:"
        android:textSize="17sp"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintStart_toEndOf="@id/client_phone_label"
        app:layout_constraintTop_toTopOf="@id/client_phone_label"
        app:layout_constraintWidth_percent="0.25" />


    <EditText
        android:id="@+id/client_name"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:background="@color/colorWhite"
        android:ems="10"
        android:gravity="left|center"
        android:inputType="textPersonName"
        android:padding="3dp"
        android:textAllCaps="true"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="@id/client_name_label"
        app:layout_constraintStart_toStartOf="@id/client_name_label"
        app:layout_constraintTop_toBottomOf="@id/client_name_label" />


    <Button
        android:id="@+id/finishOrder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/ripple_button_white"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:text="Plaseaza comanda !"
        android:textColor="@color/colorWhite"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.3" />

    <View
        android:id="@+id/client_phone_indicator"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/client_phone"
        app:layout_constraintEnd_toEndOf="@id/client_phone"
        app:layout_constraintStart_toStartOf="@id/client_phone" />

    <View
        android:id="@+id/client_name_indicator"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/client_name"
        app:layout_constraintEnd_toEndOf="@id/client_name"
        app:layout_constraintStart_toStartOf="@id/client_name" />


    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@id/finishOrder"
        app:layout_constraintEnd_toEndOf="@id/client_name"
        app:layout_constraintStart_toStartOf="@id/client_phone"
        app:layout_constraintTop_toBottomOf="@id/client_phone">


        <Button
            android:id="@+id/deliverSwitch"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ripple_button"
            android:elevation="2dp"
            android:paddingEnd="5dp"
            android:text="cu livrare"
            android:textColor="@color/colorWhite"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/totalLabel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:lines="5"
            android:padding="5dp"
            android:text="Cost produse: xxx lei \n Minim Atins! \n\n Total comanda: \nxxx lei"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/dataBase_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/client_address_indicator" />


        <TextView
            android:id="@+id/client_address_label"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:gravity="bottom"
            android:padding="3dp"
            android:text="Adresa clientului:"
            android:textSize="17sp"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="@id/deliverSwitch"
            app:layout_constraintTop_toBottomOf="@id/deliverSwitch"
            app:layout_constraintWidth_percent="0.5" />


        <Spinner
            android:id="@+id/spinnerAddress"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:background="@color/colorDarkGrey"
            android:textSize="19sp"
            android:theme="@style/spStyle"
            app:layout_constraintEnd_toStartOf="@id/client_address"
            app:layout_constraintStart_toStartOf="@id/client_address_label"
            app:layout_constraintTop_toBottomOf="@id/client_address_label"
            app:layout_constraintWidth_percent="0.85" />


        <ImageButton
            android:id="@+id/client_address"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginEnd="10dp"
            android:alpha="0.8"
            android:background="@drawable/ripple_button_white"
            android:clickable="true"
            android:focusable="true"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_add_circle_outline_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/spinnerAddress"
            app:layout_constraintTop_toBottomOf="@id/client_address_label" />


        <TextView
            android:id="@+id/dataBase_label"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:lines="10"
            android:padding="10dp"
            android:text="Client inexistent. Adaugat in baza de date!"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/client_address_indicator"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@id/client_address"
            app:layout_constraintEnd_toEndOf="@id/client_address"
            app:layout_constraintStart_toStartOf="@id/spinnerAddress" />


    </android.support.constraint.ConstraintLayout>


    <Button
        android:id="@+id/paidSwitch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ripple_button"
        android:elevation="2dp"
        android:paddingEnd="5dp"
        android:text="Neplatita!"
        android:textColor="@color/colorWhite"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/calc"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintStart_toStartOf="@id/calc"
        app:layout_constraintWidth_percent="0.3" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarContainer"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@color/colorWhite"
            app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
            app:title="Finalizeaza comanda">

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>



</android.support.constraint.ConstraintLayout>
