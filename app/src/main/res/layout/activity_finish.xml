<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteDark"
    android:orientation="horizontal"
    tools:context="g3org3.limatexmm.finish">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/calc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorWhite"
        android:padding="2dp"
        app:layout_constraintBottom_toTopOf="@id/finishOrder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintWidth_percent="0.3">

        <TextView
            android:id="@+id/calc_tot_label"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center|right"
            android:padding="7dp"
            android:text="0"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.45" />


        <TextView
            android:id="@+id/calc_mid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:padding="1dp"
            android:text="|"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@id/calc_tot_label"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.05" />

        <TextView
            android:id="@+id/calc_tot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="25.1 LEI"
            android:textColor="@color/colorPrimary"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@id/calc_mid"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.design.button.MaterialButton
            android:id="@+id/calc_1"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/colorWhite"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:cornerRadius="0dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/calc_tot"
            app:layout_constraintWidth_percent="0.33333"
            app:rippleColor="@color/colorPrimary" />

        <android.support.design.button.MaterialButton
            android:id="@+id/calc_2"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/colorWhiteDarker"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="2"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calc_tot"
            app:layout_constraintWidth_percent="0.33333"
            app:rippleColor="@color/colorPrimary"
            app:strokeWidth="0dp" />

        <android.support.design.button.MaterialButton
            android:id="@+id/calc_3"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/colorWhite"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="3"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/calc_tot"
            app:layout_constraintWidth_percent="0.33333"
            app:rippleColor="@color/colorPrimary" />

        <android.support.design.button.MaterialButton
            android:id="@+id/calc_4"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/colorWhite"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="4"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:cornerRadius="0dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/calc_1"
            app:layout_constraintWidth_percent="0.33333"
            app:rippleColor="@color/colorPrimary" />

        <android.support.design.button.MaterialButton
            android:id="@+id/calc_5"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/colorWhiteDarker"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="5"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calc_1"
            app:layout_constraintWidth_percent="0.33333"
            app:rippleColor="@color/colorPrimary" />

        <android.support.design.button.MaterialButton
            android:id="@+id/calc_9"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/colorWhite"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="9"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/calc_4"
            app:layout_constraintWidth_percent="0.33333"
            app:rippleColor="@color/colorPrimary" />

        <android.support.design.button.MaterialButton
            android:id="@+id/calc_7"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/colorWhite"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="7"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:cornerRadius="0dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/calc_4"
            app:layout_constraintWidth_percent="0.33333"
            app:rippleColor="@color/colorPrimary" />

        <android.support.design.button.MaterialButton
            android:id="@+id/calc_8"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/colorWhiteDarker"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="8"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calc_4"
            app:layout_constraintWidth_percent="0.33333"
            app:rippleColor="@color/colorPrimary" />

        <android.support.design.button.MaterialButton
            android:id="@+id/calc_6"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/colorWhite"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="6"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/calc_1"
            app:layout_constraintWidth_percent="0.33333"
            app:rippleColor="@color/colorPrimary" />

        <android.support.design.button.MaterialButton
            android:id="@+id/calc_0"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/colorWhite"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="0"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:cornerRadius="0dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/calc_7"
            app:layout_constraintWidth_percent="0.33333"
            app:rippleColor="@color/colorPrimary" />

        <android.support.design.button.MaterialButton
            android:id="@+id/calc_dot"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/colorWhiteDarker"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text=","
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calc_7"
            app:layout_constraintWidth_percent="0.33333"
            app:rippleColor="@color/colorPrimary" />

        <android.support.design.button.MaterialButton
            android:id="@+id/calc_clear"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/colorWhite"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Clear"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/calc_7"
            app:layout_constraintWidth_percent="0.33333"
            app:rippleColor="@color/colorPrimary" />


    </android.support.constraint.ConstraintLayout>


    <android.support.design.widget.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:id="@+id/client_phone_c"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:hint="Numar de telefon"
        app:errorEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/appBarContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25">


        <AutoCompleteTextView
            android:id="@+id/client_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:gravity="left|center"
            android:inputType="phone"
            android:maxLength="10"
            android:paddingStart="10dp"
            android:paddingEnd="9dp"
            android:layout_marginEnd="9dp"
            android:textSize="17sp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:id="@+id/client_name_c"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:hint="Numele clientului"
        app:errorEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/appBarContainer"
        app:layout_constraintStart_toEndOf="@id/client_phone_c"
        app:layout_constraintWidth_percent="0.25">


    <AutoCompleteTextView
        android:id="@+id/client_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTint="@color/colorPrimary"
        android:drawablePadding="5dp"
        android:gravity="left|center"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingEnd="9dp"
        android:layout_marginEnd="9dp"
        android:textSize="17sp"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.button.MaterialButton
        android:id="@+id/finishOrder"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:text="Plaseaza comanda !"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_check_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.3" />


    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@id/finishOrder"
        app:layout_constraintEnd_toEndOf="@id/client_name_c"
        app:layout_constraintStart_toStartOf="@id/client_phone_c"
        app:layout_constraintTop_toBottomOf="@id/client_phone_c">


        <android.support.design.button.MaterialButton
            android:id="@+id/deliverSwitch"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorYellow"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingEnd="5dp"
            android:text="cu livrare"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/totalLabel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:lines="5"
            android:padding="5dp"
            android:text="Cost produse: xxx lei \n Minim Atins! \n\n Total comanda: \nxxx lei"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/dataBase_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/client_address" />



        <android.support.design.widget.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:id="@+id/client_address_c"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="Adresa de livrare"
            app:errorEnabled="true"
            app:layout_constraintStart_toStartOf="@id/deliverSwitch"
            app:layout_constraintTop_toBottomOf="@id/deliverSwitch">

            <Spinner
                android:id="@+id/spinnerAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:textSize="17sp" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.button.MaterialButton
            android:id="@+id/client_address"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adauga o noua adresa"
            android:textColor="@color/colorDarkGrey"
            app:iconTint="@color/colorDarkGrey"
            android:layout_marginTop="20dp"
            app:icon="@drawable/ic_add_circle_outline_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/client_address_c"
            app:layout_constraintEnd_toEndOf="@id/client_address_c"/>


        <TextView
            android:id="@+id/dataBase_label"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:lines="10"
            android:padding="10dp"
            android:text="Client inexistent. Adaugat in baza de date!"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent" />


    </android.support.constraint.ConstraintLayout>


    <android.support.design.button.MaterialButton
        android:id="@+id/paidSwitch"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/colorPrimary"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingEnd="5dp"
        android:text="Neplatita!"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@id/calc"
        app:layout_constraintStart_toStartOf="@id/calc"
        app:layout_constraintWidth_percent="0.3" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@color/colorWhiteDark"
            app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
            app:title="Finalizeaza comanda">

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>


</android.support.constraint.ConstraintLayout>
