<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:clipToPadding="true"
    android:paddingBottom="20dp"
    android:paddingEnd="5dp"
    android:paddingStart="5dp"
    android:paddingTop="5dp">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:clipToPadding="true"
        android:elevation="4dp"
        app:cardElevation="3dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp">


            <Button
                android:id="@+id/deny_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ripple_button"
                android:clipToPadding="true"
                android:elevation="3dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Nefinalizata"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.2"
                tools:layout_editor_absoluteY="50dp" />


            <TextView
                android:id="@+id/delivery_label"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/colorWhite"
                android:clipToPadding="true"
                android:elevation="0dp"
                android:gravity="center"
                android:lines="3"
                android:padding="5dp"
                android:text="Cu livrare"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/delivery_info_label"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/delivery_name"
                app:layout_constraintWidth_percent="0.35" />

            <TextView
                android:id="@+id/data_label"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="@android:color/black"
                android:clipToPadding="true"
                android:elevation="0dp"
                android:alpha="0.8"
                android:gravity="left|center"
                android:lines="3"
                android:padding="5dp"
                android:paddingStart="30dp"
                android:text="Data: xx.xx.xxxx Ora: xx:xx \nTimp: 10 minute"
                android:textSize="17dp"
                app:layout_constraintBottom_toTopOf="@id/order_label"
                app:layout_constraintEnd_toStartOf="@id/total_label"
                app:layout_constraintStart_toStartOf="@id/order_label"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/orderID"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ripple_button"
                android:textColor="@color/colorWhite"
                android:clipToPadding="true"
                android:elevation="1dp"
                android:gravity="center"
                android:padding="5dp"
                android:paddingStart="30dp"
                android:text="ID comanda: 0f43dn284243f298nf"
                app:layout_constraintHeight_percent="0.2"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/delivery_name"
                app:layout_constraintEnd_toStartOf="@id/order_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/order_label"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/colorWhite"
                android:clipToPadding="true"
                android:elevation="1dp"
                android:gravity="left|center"
                android:lines="3"
                android:paddingStart="30dp"
                android:text="Pizza Casei \nPizza de post \nPizza mojo"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/deny_button"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintStart_toEndOf="@id/delivery_info_label" />

            <TextView
                android:id="@+id/total_label"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/colorWhite"
                android:clipToPadding="true"
                android:elevation="0dp"
                android:gravity="center"
                android:lines="3"
                android:padding="5dp"
                android:text="200 lei"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/deny_button"
                app:layout_constraintBottom_toTopOf="@id/order_label"
                app:layout_constraintWidth_percent="0.15" />

            <TextView
                android:id="@+id/delivery_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ripple_button"
                android:clipToPadding="true"
                android:textColor="@color/colorWhite"
                android:elevation="1dp"
                android:gravity="center"
                android:lines="3"
                android:padding="4dp"
                android:text="OPREA GEORGE \n0721805840"
                android:textStyle="bold"
                android:textSize="17dp"
                app:layout_constraintBottom_toTopOf="@+id/delivery_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/orderID"
                app:layout_constraintWidth_percent="0.35" />

            <TextView
                android:id="@+id/delivery_info_label"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/colorWhite"
                android:clipToPadding="true"
                android:elevation="0dp"
                android:gravity="center"
                android:lines="3"
                android:padding="4dp"
                android:paddingStart="30dp"
                android:text="Oprea George, Bolintin Vale, Str florilor, nr 12"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.35"/>


            <Button
                android:id="@+id/complete_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ripple_button_yellow"
                android:clipToPadding="true"
                android:elevation="4dp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:padding="10dp"
                android:text="Comanda Finalizata"
                android:textAllCaps="false"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@id/deny_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.2" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>

