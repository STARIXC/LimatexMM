<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="415dp"
    android:layout_height="320dp"
    android:clipToPadding="true"
    android:paddingBottom="5dp"
    android:paddingEnd="5dp"
    android:paddingStart="5dp"
    android:layout_centerHorizontal="true"
    android:paddingTop="5dp">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="390dp"
        android:layout_height="300dp"
        android:clipToPadding="true"
        android:elevation="4dp"
        app:cardElevation="3dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp">


            <Button
                android:id="@+id/deny_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/colorWhite"
                android:clipToPadding="true"
                android:elevation="3dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Nefinalizata"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/complete_button"
                app:layout_constraintTop_toBottomOf="@id/order_label"
                app:layout_constraintEnd_toEndOf="parent"/>


            <TextView
                android:id="@+id/data_label"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="@android:color/black"
                android:clipToPadding="true"
                android:elevation="0dp"
                android:gravity="left|center"
                android:lines="3"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:text="Data: xx.xx.xxxx Ora: xx:xx \nTimp: 10 minute"
                android:textSize="17dp"
                app:layout_constraintStart_toEndOf="@id/delivery_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total_label"
                app:layout_constraintBottom_toTopOf="@id/order_label"
                />

            <TextView
                android:id="@+id/order_label"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/colorWhite"
                android:clipToPadding="true"
                android:elevation="0dp"
                android:gravity="left|center|top"
                android:lines="5"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:text="Pizza Casei \nPizza de post \nPizza mojo"
                android:textSize="16dp"
                app:layout_constraintBottom_toTopOf="@id/complete_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/data_label"
                app:layout_constraintHeight_percent="0.34"
                app:layout_constraintStart_toEndOf="@id/delivery_label" />

            <TextView
                android:id="@+id/total_label"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ripple_button"
                android:clipToPadding="true"
                android:textColor="@color/colorWhite"
                android:elevation="3dp"
                android:gravity="center|left"
                android:lines="3"
                android:padding="10dp"
                android:text="200 lei"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/delivery_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/delivery_name"
                />

            <TextView
                android:id="@+id/delivery_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ripple_button"
                android:clipToPadding="true"
                android:textColor="@color/colorWhite"
                android:elevation="3dp"
                android:gravity="center|right"
                android:lines="3"
                android:padding="10dp"
                android:text="OPREA GEORGE \n0721805840"
                android:textStyle="bold"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/delivery_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.6"
                app:layout_constraintHeight_percent="0.23"
                app:layout_constraintEnd_toStartOf="@id/total_label"
                app:layout_constraintTop_toTopOf="parent"/>



            <TextView
                android:id="@+id/delivery_label"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/colorWhite"
                android:clipToPadding="true"
                android:elevation="0dp"
                android:gravity="center|right"
                android:lines="3"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:text="Cu livrare"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/delivery_info_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/delivery_name"
                app:layout_constraintWidth_percent="0.4" />


            <TextView
                android:id="@+id/delivery_info_label"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/colorWhite"
                android:clipToPadding="true"
                android:elevation="0dp"
                android:gravity="center|top|right"
                android:lines="3"
                android:padding="10dp"
                android:text="Bolintin Vale, Str florilor, nr 12"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@id/delivery_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHeight_percent="0.34"
                app:layout_constraintBottom_toTopOf="@id/complete_button"
                app:layout_constraintEnd_toStartOf="@id/order_label"/>


            <Button
                android:id="@+id/complete_button"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@color/colorWhite"
                android:clipToPadding="true"
                android:elevation="3dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Finalizata"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/colorYellow"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.18"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.6" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>

